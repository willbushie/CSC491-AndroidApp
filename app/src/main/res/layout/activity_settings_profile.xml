<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Settings Subpage Title -->
    <TextView
        android:id="@+id/text_settings_subpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_text"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/table_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <!-- Profile Settings Table Layout -->
    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="363dp"
        android:layout_height="305dp"
        android:animateLayoutChanges="false"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <!-- Profile Table Layout - Row 1 -->
        <TableRow
            android:id="@+id/table_layout_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="24dp">

            <!-- Update Email Button -->
            <Button
                android:id="@+id/button_update_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="64dp"
                android:backgroundTint="@color/button"
                android:gravity="center"
                android:text="@string/update_email"
                android:textColor="@color/icon"
                android:textSize="24sp"
                android:onClick="updateProfileEmail" />
        </TableRow>

        <!-- Profile Table Layout - Row 2 -->
        <TableRow
            android:id="@+id/table_layout_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="24dp">

            <!-- Update Password Button -->
            <Button
                android:id="@+id/button_update_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="64dp"
                android:backgroundTint="@color/button"
                android:gravity="center"
                android:text="@string/update_password"
                android:textColor="@color/icon"
                android:textSize="24sp"
                android:onClick="updateProfilePassword" />
        </TableRow>

        <!-- Profile Table Layout - Row 3 -->
        <TableRow
            android:id="@+id/table_layout_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="24dp">

            <!-- Logout Button -->
            <Button
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="64dp"
                android:backgroundTint="@color/button"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/icon"
                android:textSize="24sp"
                android:onClick="appLogout" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>