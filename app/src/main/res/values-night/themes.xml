<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhotoShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorPrimaryVariant">@color/light_black</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Base Theme Customization -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/light_grey</item>


        <!-- USE OF CUSTOM DESIGNS -->
        <item name="materialButtonStyle">@style/HomeButtonStyle</item>

    </style>



    <!-- CUSTOM DESIGNS -->



    <!-- HOME BUTTON STYLE -->
    <style name="HomeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonStyle_home_button</item>
    </style>
    <!-- Home Button Design (Shape) -->
    <style name="ButtonStyle_home_button" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">15%</item>
    </style>

</resources>